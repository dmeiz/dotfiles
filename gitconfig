[core]
  excludesfile = ~/.gitignore

[alias]
  c = commit
  cf = commit -F .commit_message -e
  co = checkout
  cb = checkout -b
  br = branch
  di = diff
  dn = diff --name-status
  dc = diff --cached
  st = status -s -b
  me = merge
  ms = merge --squash
  cp = cherry-pick
  cn = cherry-pick -n
  cm = commit
  ca = commit -a
  sr = svn rebase
  sf = svn fetch
  sd = svn dcommit
  sh = show
  shn = show --name-status
  rh = reset HEAD
  l = log --pretty='format:%Creset%h - %ar - %an - %Cred%s%Creset'
  lm10 = log --pretty='format:%Creset%h - %ar - %an - %Cred%s%Creset' master~10..master
  lp = log -p
  lb = log --pretty='format:%Creset%h - %ar - %an - %Cred%s%Creset' master..HEAD
  lbp = log -p master..HEAD
  lbn = log --name-status master..HEAD
  lr = log --pretty='format:%Creset%h - %ar - %an - %Cred%s%Creset' ORIG_HEAD..HEAD
  lrp = log -p ORIG_HEAD..HEAD
  lrn = log --name-status ORIG_HEAD..HEAD
  pu = pull --rebase
  a = add -u

  [color]
    branch = auto
    diff = auto
    status = auto
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow 
    frag = magenta 
    old = red 
    new = green 
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan

